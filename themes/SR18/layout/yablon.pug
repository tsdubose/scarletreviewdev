extends includes/layout

block content
	-
		var articleAuthor = page.author
		var artistCredit = page.artist
		var headerLink = page.headerimage
		var accentText = page.accenttext
		var accentImage = page.accentimage
		var content = parse5(page.content, accentImage, accentText)
		var title = page.title
		var subtitle = page.subtitle
		var fontLink = page.fontlink
		var fontFamily = page.fontfamily
		
		
	link(href=!{fontLink} rel="stylesheet")
	style.
		.title-marquee {background-image: url(#{headerLink});}
		h1 {font-family: #{fontFamily};}
	article
		div.title-marquee
		div.article-attributions
			h1 !{title}
			if subtitle
				p.subtitle !{subtitle}
			p.authorship by #{articleAuthor}
		div.article-content#yablon-content !{content}
